<%= @post.title %>
<%= @post.content %>
<% @post.categories.each do |c| %>
  <%= c.name %>
  <% end %>

<% @post.comments.each do |comment| %>
  <%= "#{comment.user.username} says: #{comment.content}" if comment.user %>
<% end %>


  <% @post.users.uniq.each do |user| %>
    <%= link_to user.username, user_path(user) %>
  <% end %>
